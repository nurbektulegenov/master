@{
    ViewBag.Title = "Главная";
}
<script>
    $(function () {
        $("#dialog").dialog({
            autoOpen: false,
            modal: true,
            title: "Редактирование книги"
        });
    });
</script>
<div>
    <form action="/Home/AddBook">
        <button class="btn btn-secondary">Добавить книгу</button>
    </form>
    <br />
    <form action="/Author/Index">
        <button class="btn btn-secondary">Авторы</button>
    </form>
</div>
<div>
    <h2>Список книг</h2>
</div>
<div>
<section id="pagination-data-container">
    <table class="dataTable table table-striped">
        <thead>
        <tr>
            <th>Книга</th>
            <th>Автор</th>
            <th>Isbn</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody class="tableBody">
        </tbody>
    </table>
    <div id="pagination-bar"></div>
</section>
</div>
<div id="loading" style="display: none;">
    <div class="waitWindow">Идет загрузка...</div>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/Books.js")
}