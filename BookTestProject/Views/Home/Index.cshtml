@model IEnumerable<BookTestProject.Models.BookViewModel>

@{
    ViewBag.Title = "Главная";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Главная</title>
    <link href="~/Content/Site.css" rel="stylesheet">
</head>
<body>
    <form action="/Home/AddBook">
        <button class="btn btn-default">Добавить книгу</button>
    </form>
    <br />
    <form action="/Author/Index">
        <button class="btn btn-default">Авторы</button>
    </form>
    <h2>Список книг</h2>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Название книги</th>
                    <th scope="col">Автор</th>
                    <th scope="col">Книжный номер</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Name</td>
                        <td>@b.AuthorName</td>
                        <td>@b.Isbn</td>
                        <td>
                            @using (Html.BeginForm("Edit", "Home", FormMethod.Get))
                            {
                                <input type="hidden" name="id" value="@b.Id">
                                <input type="submit" class="btn" value="Редактировать" />
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "Home", FormMethod.Post))
                            {
                                <input type="hidden" name="id" value="@b.Id">
                                <input type="submit" onclick="return confirm('Вы уверены что хотите удалить?')" class="btn btn-danger" value="Удалить" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>