@model BookTestProject.Models.AuthorViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Добавление автора</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
</head>
<body>
<div>
    @using (Html.BeginForm("AddAuthor","Author", FormMethod.Post)) {
        <p>
            @Html.LabelFor(m => m.UserName, "Имя автора :")
            <br />
            @Html.EditorFor(m => m.UserName)
            <br/>
            @Html.ValidationMessageFor(model => model.UserName)
        </p>
        <div>
            <input type="submit" name="Создать автора"/>
            <a class="btn btn-default" href="/Author/Index">Назад</a>
        </div>
    }  
</div>
</body>
</html>