@model BookTestProject.Models.AuthorViewModel

@{
    ViewBag.Title = "Добавление автора";
}

<div>
    <div class="form-group">
        @using (Html.BeginForm("AddAuthor", "Author", FormMethod.Post))
        {
            <p>
                @Html.LabelFor(m => m.UserName, "Имя автора :")
                <br/>
                @Html.EditorFor(m => m.UserName)
                <br/>
                @Html.ValidationMessageFor(model => model.UserName)
            </p>
            <div>
                <input type="submit" name="Создать автора"/>
                <a class="btn btn-secondary" href="/Author/Index">Назад</a>
            </div>
        }
    </div>
</div>