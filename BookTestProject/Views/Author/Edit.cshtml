@model BookTestProject.Models.AuthorViewModel
@{
    ViewBag.Title = "Редактирование Автора";
}

<div>
    <div>
        <h2>Автор @Model.UserName</h2>
        @using (Html.BeginForm("SaveEdit", "Author", FormMethod.Post))
        {
            <fieldset class="fieldset">
                <div class="inputData form-group">
                    @Html.HiddenFor(m => m.Id)
                    <p>
                        @Html.LabelFor(m => m.UserName, "ФИО автора")
                        <br />
                        @Html.EditorFor(m => m.UserName)
                        <br />
                        @Html.ValidationMessageFor(model => model.UserName)
                    </p>
                    <div>
                        <input type="submit" value="Сохранить" />
                        <a class="btn btn-secondary" href="/Author/Index">Назад</a>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>