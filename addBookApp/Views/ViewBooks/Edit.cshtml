@model addBookApp.Models.Book
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование</title>
    <link href="~/Content/Site.css" rel="stylesheet">
</head>
<body>
<div>
    <h2>Книга № @Model.Id</h2>
    @using (Html.BeginForm("EditBook", "ViewBooks", FormMethod.Post))
    {
        <fieldset class="fieldset">
            <div class="inputData">
                @Html.HiddenFor(m => m.Id)
                <p>
                    @Html.LabelFor(m => m.Name, "Название книги")
                    <br />
                    @Html.EditorFor(m => m.Name)
                </p>
                <p>
                    @Html.LabelFor(m => m.Author, "Автор")
                    <br />
                    @Html.EditorFor(m => m.Author)
                </p>
                <p>
                    @Html.LabelFor(m => m.Isbn, "Книжный номер")
                    <br />
                    @Html.EditorFor(m => m.Isbn)
                </p>
                <div>
                    <input type="submit" value="Сохранить" />
                    <button class="btn btn-default" onclick="window.history.back()">Назад</button>
                </div>
            </div>
        </fieldset>
    }
    @*<form action="../ViewBooks/EditBook" method="post">
        <p>Название книги</p>
        <input type="text" name="Name" maxlength="50"/>
        <p>Автор</p>
        <input type="text" name="Author" maxlength="50"/>
        <p>Книжный номер</p>
        <input type="text" name="Isbn"/>
        <button type="submit">Сохранить</button>
    </form>*@
</div>
</body>
</html>
